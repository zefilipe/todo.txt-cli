shift
action=$1

if [ "$action" = "usage" ]; then
    echo "List done tasks:"
    echo "   lsd usage"
    echo "      shows the mode of usage / help"
    echo "   lsd [TERM...]"
    echo "      List done tasks by the specified terms"
    echo "      If no any term is specified, list all done tasks"
    echo ""
    exit
fi

"$TODO_SH" command lsa " x " $@
